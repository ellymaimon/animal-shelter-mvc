@{
    ViewData["Title"] = "Animal Shelter";
}

<h1>Animal Shelter</h1>
<form action="/animals" method="post">
    <div class="form-group">
        <input name="name" type="text" placeholder="Enter name here" required>
        <input name="species" type="text" placeholder="Enter species here" required>
        <input name="date" type="date" placeholder="Enter date here" required>
        <input name="gender" type="text" placeholder="Enter gender here" required>
        <button class="btn btn-dark" type="submit">Add</button>
    </div>
</form>

<div class="theTable">
    <div>Name</div>
    <div>Species</div>
    <div>Date</div>
    <div>Gender</div>

        @foreach(var animal in Model)
        {
            <div class="cell">@animal.Name</div>
            <div class="cell">@animal.Species</div>
            <div class="cell">@animal.Date</div>
            <div class="cell">@animal.Gender</div>
        }

</div>
